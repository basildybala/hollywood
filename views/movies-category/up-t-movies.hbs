   flex-direction: row;
   flex-wrap: wrap;justify-content: center;
 }
table.dataTable thead th{border-bottom: 1px solid var(--light-text)}
 
 .fst-table-header h1{font-size: 19px;font-family: 'Poppins', sans-serif;font-weight: 500;margin: 0;overflow: hidden;max-height: 26px;text-overflow: ellipsis;white-space: nowrap;text-align: center;}
 .dataTables_info{display: none;}
.dataTables_length{display: flex;justify-content: flex-start;}
