 .dataTables_length select {border: 1px solid #fff;padding: 3px;color: #fff;}
 .dataTables_filter {display: flex;justify-content: flex-end;}
 .dataTables_filter label{color: #fff;font-family: 'Poppins', sans-serif;font-weight: 500;opacity: 80%;font-size: 14px;}
 .dataTables_filter input{color: #fff;}

